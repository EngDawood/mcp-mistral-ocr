{
  "name": "mistral-ocr-mcp",
  "version": "1.0.0",
  "description": "MCP server for PDF OCR processing using Mistral AI",
  "type": "module",
  "bin": {
    "mistral-ocr-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc --project tsconfig.worker.json",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "deploy": "wrangler deploy",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "mistral",
    "ocr",
    "pdf",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@mistralai/mistralai": "^1.5.0",
    "agents": "^0.0.1",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250117.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0",
    "wrangler": "^3.103.0"
  }
}
